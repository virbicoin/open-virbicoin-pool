<div class="page-header-container">
  <div class="container">
    <h1><i class="fas fa-gauge-high"></i> Dashboard</h1>
    <p class="text-muted">Real-time pool and network statistics.</p>
  </div>
</div>

<div class="container">
  <div class="row">
    <!-- Row 1 -->
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-users"></i></div>
          <div class="stat-info">
            <span class="stat-title">Miners Online</span>
            <span class="stat-value">{{format-number stats.model.minersTotal}} Miners</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-tachometer-alt"></i></div>
          <div class="stat-info">
            <span class="stat-title">Pool Hash Rate</span>
            <span class="stat-value">{{format-hashrate stats.model.hashrate}}</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-tachometer-alt"></i></div>
          <div class="stat-info">
            <span class="stat-title">Network Hash Rate</span>
            <span class="stat-value">{{format-hashrate stats.hashrate}}</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-globe"></i></div>
          <div class="stat-info">
            <span class="stat-title">Network Difficulty</span>
            <span class="stat-value">{{with-metric-prefix stats.difficulty}}</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <!-- Row 2 -->
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-layer-group"></i></div>
          <div class="stat-info">
            <span class="stat-title">Blockchain Height</span>
            <span class="stat-value">{{format-number stats.height}} Blocks</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="far fa-clock"></i></div>
          <div class="stat-info">
            <span class="stat-title">Last Block Found</span>
            <span class="stat-value">{{#if stats.model.stats.lastBlockFound}}{{format-relative (seconds-to-ms stats.model.stats.lastBlockFound)}}{{else}}N/A{{/if}}</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-chart-pie"></i></div>
          <div class="stat-info">
            <span class="stat-title">Round Variance</span>
            <span class="stat-value">{{format-number stats.roundVariance style='percent'}}</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-history"></i></div>
          <div class="stat-info">
            <span class="stat-title">Payouts</span>
            <span class="stat-value">Every 2 hours</span>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <!-- Row 3 -->
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-cogs"></i></div>
          <div class="stat-info">
            <span class="stat-title">Algorithm</span>
            <span class="stat-value">Ethash</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-hand-holding-usd"></i></div>
          <div class="stat-info">
            <span class="stat-title">Pool Fee</span>
            <span class="stat-value">{{config.PoolFee}}</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-coins"></i></div>
          <div class="stat-info">
            <span class="stat-title">Block Reward</span>
            <span class="stat-value">8 VBC</span>
          </div>
        </div>
      </div>
    </div>
    <div class="col-lg-3 col-md-6 col-sm-6">
      <div class="panel card stat-card">
        <div class="panel-body">
          <div class="stat-icon"><i class="fas fa-file-alt"></i></div>
          <div class="stat-info">
            <span class="stat-title">Payment Method</span>
            <span class="stat-value">PROP</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel card">
        <div class="panel-body">
            <h3 class="panel-title-lookup"><i class="fas fa-user-circle"></i> Your Stats &amp; Payment History</h3>
            <p class="text-muted">Enter your wallet address to check your stats.</p>
            <div class="input-group input-group-lg">
                {{input value=cachedLogin class="form-control" placeholder="Your VirBiCoin Address"}}
                <span class="input-group-btn">
                    <button class="btn btn-primary" type="button" {{action 'lookup' cachedLogin}}>
                        <i class="fas fa-search"></i> Lookup
                    </button>
                </span>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
