<!-- Fixed navbar -->
<div class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/"><span class="logo-2">VirBiCoin Mining Pool</span></a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        {{#active-li currentWhen='index'}}
          {{#link-to 'index'}}
            <i class="fas fa-gauge-high"></i> Dashboard
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='help'}}
          {{#link-to 'help'}}
            <i class="fas fa-rocket"></i> Getting Started
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='blocks'}}
          {{#link-to 'blocks'}}
            <i class="fas fa-cubes"></i> Pool Blocks
            {{#if immatureTotal}}
              <span class="badge alert-success">{{immatureTotal}}</span>
            {{/if}}
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='payments'}}
          {{#link-to 'payments'}}
            <i class="fas fa-credit-card"></i> Payments
          {{/link-to}}
        {{/active-li}}
        {{#active-li currentWhen='miners'}}
          {{#link-to 'miners'}}
            <i class="fas fa-users"></i> Miners
            {{#if model.minersTotal}}
              <span class="badge alert-success">{{model.minersTotal}}</span>
            {{/if}}
          {{/link-to}}
        {{/active-li}}
        <li>
          <a href="https://stats.digitalregion.jp/" rel="noopener noreferrer">
            <i class="fas fa-network-wired"></i> Network
          </a>
        </li>
        {{#active-li currentWhen='about'}}
          {{#link-to 'about'}}
            <i class="fas fa-circle-info"></i> About <span class="badge alert-success">&#x2713;</span>
          {{/link-to}}
        {{/active-li}}
      </ul>
    </div>
  </div>
</div>

{{outlet}}
