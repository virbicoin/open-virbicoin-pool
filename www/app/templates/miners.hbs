<div class="page-header-container">
  <div class="container">
    <h1><i class="fas fa-users"></i> Miners</h1>
    <p class="text-muted">List of all active miners in the pool.</p>
  </div>
</div>

<div class="container">
  <div class="panel card">
    <div class="panel-heading">
      <h3 class="panel-title">Active Miners</h3>
    </div>
    <div class="panel-body">
      {{#if model.miners}}
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Login</th>
              <th>Hashrate</th>
              <th>Last Beat</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.miners as |m|}}
            <tr class="{{if m.offline "danger"}}">
              <td>{{#link-to 'account' m.login class='hash'}}{{m.login}}{{/link-to}}</td>
              <td>{{format-hashrate m.hr}}</td>
              <td>{{format-date-locale m.lastBeat}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
      {{else}}
      <p>There are currently no active miners.</p>
      {{/if}}
    </div>
  </div>
</div>
